<div class="container">
  <div class="inner">

    <h1>Listing reviews</h1>

    <table>
      <thead>
        <tr>
          <th>Rating</th>
          <th>Comments</th>
          <th>User</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @reviews.each do |review| %>
          <tr>
            <td><%= review.rating %></td>
            <td><%= review.comments %></td>
            <td><%= link_to review.user.username, review.user %></td>
            <td><%= link_to 'Show', review %></td>
            <td><%= link_to 'Edit', edit_review_path(review) %></td>
            <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

  </div>
</div>
