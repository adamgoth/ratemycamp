<%= form_for [@campsite, @review] do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id, :value => current_user.id %>

  <%= f.hidden_field :campsite_id %>

  <div class="field">
    <%= f.label :rating, "Overall Rating" %>
    <%= f.select :rating, (1..5) %>
  </div>
  <div class="field">
    <%= f.label :comments %><br>
    <%= f.text_area :comments, cols: 100, rows: 8 %>
  </div><br>
  <div class="actions">
    <%= submit_tag "Submit Review", name: nil, :class => "btn btn-success" %>
  </div>
<% end %>
