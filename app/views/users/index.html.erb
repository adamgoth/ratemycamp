<div class="container">
  <div class="inner">

  	<h1>Users</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Username</th>
          <th>Reviews Submitted</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= link_to user.username, user %></td>
            <td><%= user.reviews.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>